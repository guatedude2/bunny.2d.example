{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-undef": 2,
    "no-unused-vars": 2,
    "quotes": [1, "single"],
    "semi": [1, "always"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  }
}